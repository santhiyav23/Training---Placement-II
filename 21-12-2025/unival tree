class Solution:
    def isUnivalTree(self, root: Optional[TreeNode]) -> bool:
        def check(node, n):
            if not node:
                return True
            if node.val != n:
                return False
            return check(node.left, n) and check(node.right, n)
            
        if not root:
            return True
        num = root.val
        return check(root, num)
